{
  "project": {
    "name": "SGX Smart Contract Demo",
    "version": "1.0.0-demo",
    "description": "Simplified Intel SGX demonstration for educational purposes - smart contract verification in TEE",
    "author": "Chord",
    "license": "MIT",
    "demo_mode": true
  },
  "sgx": {
    "sdk_path": "/opt/intel/sgxsdk",
    "mode": "SIM",
    "debug": true,
    "architecture": "x64",
    "enclave": {
      "name": "enclave",
      "config_file": "enclave/enclave.config.xml",
      "private_key": "enclave/enclave_private.pem",
      "heap_size": "0x100000",
      "stack_size": "0x40000",
      "tcs_num": 1,
      "tcs_policy": 1,
      "disable_debug": false,
      "misc_select": "0x00000000",
      "misc_mask": "0xFFFFFFFF"
    }
  },
  "smart_contract": {
    "max_contract_size": 65536,
    "max_input_size": 4096,
    "max_result_size": 4096,
    "max_gas_limit": 1000000,
    "default_gas_limit": 100000,
    "gas_costs": {
      "HALT": 0,
      "PUSH": 3,
      "POP": 2,
      "ADD": 3,
      "SUB": 3,
      "MUL": 5
    }
  },
  "crypto": {
    "hash_algorithm": "SHA256",
    "signature_algorithm": "ECDSA",
    "encryption_algorithm": "AES-GCM",
    "key_sizes": {
      "rsa": 2048,
      "ecc": 256,
      "aes": 256,
      "hmac": 256
    },
    "random_seed_size": 32,
    "nonce_size": 12,
    "tag_size": 16
  },
  "performance": {
    "timeout_seconds": 30,
    "memory_limit_mb": 256,
    "enable_profiling": false,
    "log_performance": false
  },
  "logging": {
    "level": "INFO",
    "console_output": true,
    "timestamp_format": "%Y-%m-%d %H:%M:%S",
    "enable_file_logging": false
  },
  "network": {
    "enable_remote_attestation": true,
    "attestation_service_url": "https://api.trustedservices.intel.com",
    "timeout_ms": 5000,
    "retry_attempts": 3,
    "enable_tls": true
  },
  "storage": {
    "contracts_directory": "contracts",
    "docs_directory": "docs",
    "config_directory": "config",
    "bin_directory": "bin",
    "enable_encryption": false,
    "backup_enabled": false
  },
  "security": {
    "enable_memory_protection": true,
    "enable_stack_protection": true,
    "enable_control_flow_integrity": true,
    "secure_heap_size": "0x100000",
    "enable_audit_logging": true,
    "max_audit_log_size_mb": 50
  },
  "testing": {
    "enable_demo_tests": true,
    "test_data_directory": "contracts",
    "mock_sgx_in_simulation": true,
    "generate_test_reports": false
  },
  "development": {
    "enable_debug_output": true,
    "enable_verbose_logging": false,
    "enable_memory_debugging": false,
    "enable_performance_counters": false,
    "auto_rebuild_on_change": false,
    "demo_mode": true
  }
}