{
  "project": {
    "name": "SGX Smart Contract Demo",
    "version": "1.0.0",
    "description": "Intel SGX demonstration for smart contract verification in TEE",
    "author": "Chord",
    "license": "MIT"
  },
  "sgx": {
    "sdk_path": "/opt/intel/sgxsdk",
    "mode": "SIM",
    "debug": true,
    "architecture": "x64",
    "enclave": {
      "name": "enclave",
      "config_file": "enclave/enclave.config.xml",
      "private_key": "enclave/enclave_private.pem",
      "heap_size": "0x100000",
      "stack_size": "0x40000",
      "tcs_num": 1,
      "tcs_policy": 1,
      "disable_debug": false,
      "misc_select": "0x00000000",
      "misc_mask": "0xFFFFFFFF"
    }
  },
  "smart_contract": {
    "max_contract_size": 65536,
    "max_input_size": 4096,
    "max_result_size": 4096,
    "max_gas_limit": 1000000,
    "default_gas_limit": 100000,
    "gas_costs": {
      "HALT": 0,
      "PUSH": 3,
      "POP": 2,
      "ADD": 3,
      "SUB": 3,
      "MUL": 5,
      "DIV": 5,
      "MOD": 5,
      "AND": 3,
      "OR": 3,
      "XOR": 3,
      "NOT": 3,
      "EQ": 3,
      "LT": 3,
      "GT": 3,
      "JMP": 8,
      "JMPIF": 10,
      "CALL": 40,
      "RET": 5,
      "LOAD": 200,
      "STORE": 5000,
      "HASH": 30,
      "VERIFY": 3000,
      "ECRECOVER": 3000,
      "BALANCE": 400,
      "TRANSFER": 9000
    }
  },
  "crypto": {
    "hash_algorithm": "SHA256",
    "signature_algorithm": "ECDSA",
    "encryption_algorithm": "AES-GCM",
    "key_sizes": {
      "rsa": 2048,
      "ecc": 256,
      "aes": 256,
      "hmac": 256
    },
    "random_seed_size": 32,
    "nonce_size": 12,
    "tag_size": 16
  },
  "performance": {
    "benchmark_iterations": 100,
    "timeout_seconds": 30,
    "memory_limit_mb": 256,
    "enable_profiling": true,
    "log_performance": true
  },
  "logging": {
    "level": "INFO",
    "file": "logs/sgx_demo.log",
    "max_file_size_mb": 10,
    "max_files": 5,
    "console_output": true,
    "timestamp_format": "%Y-%m-%d %H:%M:%S"
  },
  "network": {
    "enable_remote_attestation": true,
    "attestation_service_url": "https://api.trustedservices.intel.com",
    "timeout_ms": 5000,
    "retry_attempts": 3,
    "enable_tls": true
  },
  "storage": {
    "data_directory": "data",
    "contracts_directory": "contracts",
    "logs_directory": "logs",
    "temp_directory": "tmp",
    "enable_encryption": true,
    "backup_enabled": false
  },
  "security": {
    "enable_memory_protection": true,
    "enable_stack_protection": true,
    "enable_control_flow_integrity": true,
    "secure_heap_size": "0x100000",
    "enable_audit_logging": true,
    "max_audit_log_size_mb": 50
  },
  "testing": {
    "enable_unit_tests": true,
    "enable_integration_tests": true,
    "test_data_directory": "test_data",
    "mock_sgx_in_simulation": true,
    "generate_test_reports": true
  },
  "development": {
    "enable_debug_output": true,
    "enable_verbose_logging": false,
    "enable_memory_debugging": false,
    "enable_performance_counters": true,
    "auto_rebuild_on_change": false
  }
}